!!!
%html{:lang => "en"}
  %head
    %title MacMccain
    = stylesheet_link_tag    'application', media: 'all'
    = csrf_meta_tags

  %body

    .navbar{:role => "navigation"}
      .navbar-header
        = link_to "MacMccain", root_path, class: "navbar-brand"
      %ul.nav.navbar-nav.pull-right
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => albums_path}
            Albums
            %span.caret
          %ul.inverse-dropdown.dropdown-menu{:role => "menu"}
            %li.divider
            %li= link_to "all MAC too McCain easy", root_path
            %li.divider
            %li= link_to "Color of Everything", root_path
            %li.divider
            %li= link_to "Perfect World", root_path
            %li.divider
            %li= link_to "Rhythm and Dues", root_path
        %li= link_to "Contact", root_path
        - if current_user
          %li= link_to "Logout", logout_path
        - else
          %li.login-toggle
            %a Login

    - if notice != nil
      %p.notice.alert.alert-success.col-md-6.col-md-offset-3.text-center=notice

    = yield

    .footer
      %p.text-center copyright 2015

    = javascript_include_tag 'application'
