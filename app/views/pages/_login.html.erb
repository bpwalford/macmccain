
<section class="form login-form well">

  <button class="pull-right exit">x</button>

  <%= form_for(:session, url: login_path) do |f| %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "Login", class: 'btn btn-default pull-right' %>
    </div>

  <% end %>

</section>
